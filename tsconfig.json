{
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/__tests__"],
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "rootDir": "./",
    "outDir": "dist",

    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowJs": true
  },
  "lib": ["es2015"]
}
